{
  "name": "resumematch",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "oxlint",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "pnpm run dev:server:build-initial && pnpm run dev:server:ordered",
    "dev:server:build-initial": "pnpm -F @resumematch/db run build && pnpm -F @resumematch/auth run build && pnpm -F @resumematch/api run build",
    "dev:server:ordered": "concurrently -c auto -p name -k \"pnpm -F @resumematch/db dev\" \"sleep 0.2 && pnpm -F @resumematch/auth dev\" \"sleep 0.4 && pnpm -F @resumematch/api dev\" \"sleep 0.6 && pnpm -F server dev\"",
    "db:push": "turbo -F @resumematch/db db:push",
    "db:studio": "turbo -F @resumematch/db db:studio",
    "db:generate": "turbo -F @resumematch/db db:generate",
    "db:migrate": "turbo -F @resumematch/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/node": "^22.18.13",
    "axios": "^1.13.1",
    "concurrently": "^9.1.2",
    "orval": "8.0.0-rc.1",
    "oxlint": "^1.25.0",
    "swagger-typescript-api": "^13.2.16",
    "tsdown": "^0.15.12",
    "turbo": "^2.5.8",
    "ultracite": "6.1.0"
  },
  "packageManager": "pnpm@10.20.0"
}
